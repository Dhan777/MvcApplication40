@model IEnumerable<MvcApplication40.Models.BlogTbl>

@{
    ViewBag.Title = "TechnologyList";
}

<h2>TechnologyList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if(Model.Count()>0){
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Technology)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Technology)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.BlogID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BlogID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BlogID })
        </td>
    </tr>
}

</table>
}
else{
    <h1 style="text-align:center">No Technology is Available</h1>
}