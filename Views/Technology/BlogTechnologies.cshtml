@model List< MvcApplication40 .Models.BlogTbl>
@{
    ViewBag.Title = "GetBloggersList";
}

<h1 style="text-align:center">Technologies</h1><hr />
@if(@Model.Count>0){
  <div class="container">

@foreach (var p in Model)
{
     <figure style="border:1px solid;padding:3px;margin:5px;float:left;display:inline">
        <a href="/Blog/ReadBlogAccordingToTechnology/@p.TechnologyID"> <img title="@p.Author" src="data:/img/png;base64,@Convert.ToBase64String(p.TechnologyImage, 0, p.TechnologyImage.Length)" width="200" height="200" /></a>
         <figcaption>@Html.ActionLink(p.Author.ToString(),"ReadBlogAccordingToTechnology","Blog",new {id=@p.TechnologyID},null) (  @p.Technology Blogs)</figcaption>
     </figure>
}
      </div>
}
else{
     <h1 style="text-align:center">No Technology is Added</h1>
}