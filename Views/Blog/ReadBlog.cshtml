@model MvcApplication40.Models.BlogTbl

@{
    ViewBag.Title = "ReadBlog";
}

@*<h2>@Model.CreatedBy 's Blog</h2>
<h3 style="text-align:center">  @Model.BlogTitle</h3>*@
<table class="table-responsive">
    <tr>
        <td><a href="/Blog/ReadBlogAccordingToTechnology/@Model.TechnologyID"><img src="data:/img/png;base64,@Convert.ToBase64String(Model.TechnologyImage, 0, Model.TechnologyImage.Length)" width="100" height="50" title="@Model.Technology" class="img img-thumbnail img-responsive"/></a></td>
        <th><h2>@Model.BlogTitle</h2></th>
    </tr>
</table>
  <table style="margin-left:20%">
<tr>
        <td><a href="/Blog/ReadBlogAccordingToAuthor/@Model.Author"><img src="data:/img/png;base64,@Convert.ToBase64String(Model.UserImage, 0, Model.UserImage.Length)" title="@Model.CreatedBy" width="100" height="50" class="img img-thumbnail img-responsive" /></a></td>
        <td>@Model.CreatedBy  <i class="glyphicon glyphicon-thumbs-up lg"></i> @Model.UploadedDate.ToShortDateString()</td>
   </tr>
</table>
<fieldset>
    <legend></legend>
    <div class="container">
    <div class="display-field">
        @Html.Raw(Model.Content)
    </div>
        </div>
</fieldset>
