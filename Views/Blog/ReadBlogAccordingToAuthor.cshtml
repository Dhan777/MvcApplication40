@{
    foreach(var p in Model)
    {
        <table><tr>
            <td rowspan="2">
       <a href="/Blog/ReadBlogAccordingToTechnology/@p.TechnologyID"><img src="data:/img/png;base64,@Convert.ToBase64String(p.TechnologyImage, 0, p.TechnologyImage.Length)" title="@p.Technology" width="100" height="50" class="img img-thumbnail" /></a>
                </td><td>
                    <table>
                        <tr><td>@Html.ActionLink(p.BlogTitle.ToString(), "ReadBlog", "Blog", new { id = @p.BlogID }, null)</td></tr>
                        <tr><td>By @p.CreatedBy Uploaded On @p.UploadedDate</td></tr>
                    </table>
                     </td>
            </tr>
        </table>
    }
}
    </div>