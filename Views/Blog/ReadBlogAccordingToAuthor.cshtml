@model List< MvcApplication40 .Models.BlogTbl>
@{
    ViewBag.Title = "Index";
}

<h1 style="text-align:center">@Model[0].CreatedBy's Blog List</h1><hr />

<div class="container">
@*@foreach (var p in Model)
{
    <p>@Html.ActionLink(p.CreatedBy, "Details", "Blog", new  {@id=p.Author },null) (  @p.Technology Blogs)</p>
