 @if (Model.Count > 0) { 
<div class="container">
@{
    foreach(var p in Model)
    {
        <table><tr>
            <td rowspan="2">
        <img src="data:/img/png;base64,@Convert.ToBase64String(p.TechnologyImage, 0, p.TechnologyImage.Length)" title="@p.Technology" class="img img-thumbnail img-responsive" width="100" height="50" />
                </td>
            <td>
